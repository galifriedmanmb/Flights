<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="dollar"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="currency"
        android:key="currencyKey" />
    <EditTextPreference
        android:defaultValue="white"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="order screen BGColor"
        android:key="orderBGCKey" />
    <EditTextPreference
        android:defaultValue="white"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="review screen BGColor"
        android:key="reviewBGCKey" />
    <Preference
        android:title="exit"
        android:key="exit" />
</PreferenceScreen>